<% if notice %>
  <div id="flash" class="alert alert-info alert-dismissible" role="alert">
    <button class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div id="flash" class="alert alert-warning alert-dismissible" role="alert">
    <button class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= alert %>
  </div>
<% end %>
<% if notice || alert %>
  <%= content_for(:after_js) do %>
    <script>
      setTimeout(function(){
      $('#flash').slideUp();
    }, 5000);
    </script>
  <% end %>
<% end %>
