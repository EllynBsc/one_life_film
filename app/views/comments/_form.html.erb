<% url = "/#{commentable.class.to_s.downcase}s/#{commentable.id}/comments" %>

<div class="comment-form">
  <%= simple_form_for([commentable, commentable.comments.new], url: url) do |f| %>
    <%= f.input :commentable_type, value: commentable.class.to_s, as: :hidden %>
    <%= f.input :content, label: false, placeholder: "Laat een berichtje achter", input_html: { class: "form-control" } %>
    <%= f.input :author, label: false, placeholder: "Uw naam", input_html: { class: "form-control", style: "margin-bottom: 20px;" } %>
    <%= f.submit input_html: { type: "submit" }, value: "Plaats bericht" %>
  <% end %>
</div>
