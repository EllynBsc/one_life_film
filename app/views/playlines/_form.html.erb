<%= simple_form_for([playbook, playline], remote: true, html: { class: 'line-form' }) do |f| %>
    <%= f.input :begin_time, label: false %>
    <%= f.input :end_time, label: false %>
    <%= f.input :location, label: false, placeholder: "Location", input_html: { class: 'form-location' } %>
    <%= f.input :content, label: false, placeholder: "What's happening?", input_html: { class: 'form-content' } %>
    <%= f.submit value: "Save" %>
<% end %>
