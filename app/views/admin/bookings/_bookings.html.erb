<table class="table table-striped table-hover">
  <thead z>
    <tr>
      <th><h2><%= @title %></h2 id="booking-title"></th>
    </tr>
  </thead>

  <thead class="thead-inverse">
    <tr>
      <th>Name</th>
      <th>Contact</th>
      <th>Location</th>
      <th>Songs</th>

      <th>Playlines</th>

      <th>Status</th>

    </tr>
  </thead>
  <tbody>
    <% bookings.each do |booking| %>
   <tr>
    <td>
      <%= link_to admin_booking_path(booking) do %>
        <%= booking.name %>
      <% end %>
      <br>
      <%= booking.date_wedding.strftime('%A, %b %d') %>
    </td>
    <td>
      <%= booking.email_address %>
      <br>
      <%= booking.phone_number %>
    </td>
    <td><%= booking.location_wedding %></td>
    <td><%= booking.playbook.song_choices.count %></td>
    <td><%= booking.playbook ? booking.playbook.playlines.try(:count) : 0  %></td>
<td class="request-status">
    <%= link_to "Film", update_state_admin_booking_path(booking, new_state: 'film'), method: :patch, class: "state-btn #{booking.btn_state('film')}" %>

    <%= link_to "Factuur", update_state_admin_booking_path(booking, new_state: 'invoice'), method: :patch, class: "state-btn #{ booking.btn_state('invoice')}" %>

    <%= link_to "Betaling", update_state_admin_booking_path(booking, new_state: 'payment'), method: :patch, class: "state-btn #{ booking.btn_state('payment')}" %>
  </td>


  </tr>
  <% end %>
</tbody>
</table>
