<% url = "/admin/#{commentable.class.to_s.downcase}s/#{commentable.id}/comments" %>

<div class="comment-form">
  <%= simple_form_for([commentable, commentable.comments.new], url: url) do |f| %>
    <%= f.input :commentable_type, value: commentable.class.to_s, as: :hidden %>
    <%= f.input :content, label: false, placeholder: "Maak een notitie", input_html: { class: "form-control" } %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
