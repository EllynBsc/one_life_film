

<div id="page-wrapper">
  <div class="container-fluid">
    <div class="data-list">
      <div class="flexed-cards">
        <div class="data-card">
          <h5> Bericht </h5>
          <h6><%= @request.subject %></h6>
          <p><%= @request.message %></p>
          <p>Via: <%= @request.source_reference %></p>
        </div>
        <div class="data-card">
          <h5> Praktisch </h5>
          <p> <%= @request.date_wedding %> </p>
          <p> <%= @request.location_wedding %> </p>
        </div>
        <div class="data-card">
          <h5> Status </h5>
          <p> <%= @request.pretty_state %></p>
          <p> Aanvraag binnengekomen op <%= @request.created_at.strftime('%A, %b %d') %> </p>
        </div>
        <div class="data-card">
          <h5>
            Contact
          </h5>
          <p>
            <%= @request.email_address %>
          </p>
          <p>
            <%= @request.phone_number %>
          </p>
        </div>
      </div>
      <h3 class="padding-100">
        Notities
      </h3>
      <div class="comments">
        <% @request.comments.order(created_at: :asc).each do |comment|  %>
          <%= render 'admin/comments/show', comment: comment %>
        <% end %>
        <%= render 'admin/comments/form', commentable: @request.object, comment: @comment %>
      </div>

    </div>


  </div>
  <!-- /.container-fluid -->

</div>




