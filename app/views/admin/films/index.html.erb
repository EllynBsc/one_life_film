<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Films
        </h1>
        <ol class="breadcrumb">
          <li>
            <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
          </li>
          <li class="active">
            <i class="fa fa-desktop"></i> Films
          </li>
        </ol>
      </div>
    </div>


    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <table class="table table-striped table-hover">
          <p><a href="/admin/films/new" class="btn btn-primary" role="button"> Nieuwe film toevoegen! &raquo;</a> </p>
          <thead z>
            <tr>
              <th><h2>Alle films</h2></th>
           </tr>
         </thead>

         <thead class="thead-inverse">
          <tr>
            <th>Name</th>
            <th>Url</th>
            <th>Link</th>
            <th>Promo</th>
            <th>Poster</th>

            <th>Show</th>
            <th>Edit</th>
            <th>Destroy</th>
          </tr>
        </thead>
        <tbody>
         <% @films.each do |film| %>
          <tr>
            <td><%= film.name %></td>
            <td><%= film.video_url %></td>
            <td><%= film.slug %></td>
            <td><%= film.password %></td>
            <td><%= film.promo %></td>
            <td><%= film.poster %></td>

            <td><%= link_to 'Show', admin_film_path(film),
            :class => "btn btn-primary"%></td>
            <td><%= link_to 'Edit', edit_admin_film_path(film),
            :class => "btn btn-warning"%></td>
            <td><%= link_to 'Destroy', admin_film_path(film),
            data: {confirm: 'Are you sure?'},
            method: :delete,
            :class => "btn btn-danger"%></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>

